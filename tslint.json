// TODO: Add rule for mandatory non empty doc ?
{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "interface-name": false,
        "ordered-imports": false,
        "member-access": false,
        "quotemark": {
            "options": "single"
        },
        "object-literal-sort-keys": false,
        "no-console": false,
        "arrow-parens": false,
        // TODO: This should maybe not be disabled but weakened ?
        "member-ordering": false,
        "no-unused-expression": true,
        "no-unused-variable": true,
        "completed-docs": {
            "options": {
                "interfaces": {
                    "visibilities": "all"
                },
                "classes": {
                    "visibilities": "all"
                }
            }
        }
    },
    "rulesDirectory": []
}
